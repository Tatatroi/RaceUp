<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".RaceFormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Suggest a New Race"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Name"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/raceNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g. Berlin Marathon"
                    android:inputType="textCapWords" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Website"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/websiteEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="https://..."
                    android:inputType="textUri" />

                <Button
                    android:id="@+id/raceDateButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/teal_200"
                    android:drawableLeft="@drawable/ic_calendar_today_24"
                    android:gravity="center|start"
                    android:paddingStart="16dp"
                    android:text="Select Date"
                    android:textColor="@color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Available Distances"
                    android:textColor="@color/teal_700"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/cb5k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 km" />

                <CheckBox
                    android:id="@+id/cb10k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 km" />

                <CheckBox
                    android:id="@+id/cbHalf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Half Marathon (21.1 km)" />

                <CheckBox
                    android:id="@+id/cbFull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marathon (42.2 km)" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Other / Custom (comma separated)"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/customDistanceEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g. 27km Trail, Ultra 100km"
                    android:inputType="textCapSentences" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/teal_700"
            android:text="Submit for Approval"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>