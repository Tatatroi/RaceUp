<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_run_24"
            app:tint="@color/brand_primary"
            android:background="@drawable/bg_circle_light"
            android:padding="8dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/itemRaceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Race Name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary"/>

            <TextView
                android:id="@+id/itemRaceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/12/2024"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"/>
        </LinearLayout>

        <TextView
            android:id="@+id/itemRaceDist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 km"
            android:textStyle="bold"
            android:textColor="@color/brand_accent"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>