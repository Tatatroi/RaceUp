<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="@drawable/bg_card_gradient"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/textRank"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="#1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/brand_primary"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textMemberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mitroi Stefan"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textMemberStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: 0 km"
            android:textSize="14sp"
            android:textColor="#666666"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textTotalDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="42 km"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/brand_primary"/>

</LinearLayout>