<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <View
            android:id="@+id/iconBg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_light"
            android:backgroundTint="#E0F2F1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right_24"
            app:tint="@color/brand_primary"
            app:layout_constraintStart_toStartOf="@+id/iconBg"
            app:layout_constraintEnd_toEndOf="@+id/iconBg"
            app:layout_constraintTop_toTopOf="@+id/iconBg"
            app:layout_constraintBottom_toBottomOf="@+id/iconBg"/>

        <TextView
            android:id="@+id/tvRaceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Berlin Marathon"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/iconBg"
            app:layout_constraintEnd_toStartOf="@+id/tvTime"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oct 24, 2023"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintStart_toStartOf="@+id/tvRaceName"
            app:layout_constraintTop_toBottomOf="@+id/tvRaceName"/>

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.00 km"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/tvRaceName"
            app:layout_constraintTop_toBottomOf="@+id/tvDate"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25:30"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvPace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:06 /km"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/brand_accent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>